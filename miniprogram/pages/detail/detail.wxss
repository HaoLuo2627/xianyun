swiper {
  height: 500rpx;
  margin: 0 30rpx; 
  position: relative;

  margin-bottom: -160rpx;
  overflow: hidden;
  border-radius: 20rpx;
  border: 1px solid #66cdAA;
  background: #fff;
}
.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.swiper-item{
  width: 100%;
  display: block;
  height: 100px;
}


.box {
  border: 1px solid #fff;
  margin: 20rpx 30rpx 40rpx 30rpx;
  padding: 20rpx 30rpx 20rpx 270rpx;
  font-size: 28rpx;
  height: 300rpx;
  overflow: hidden;
  position: absolute; 
  top:500rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 6rpx #fff; 
}

.box  text {
  position: relative;
  top: 80rpx;
  right:225rpx;
  border-radius: 10rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-bottom: 10rpx;
  color: #555;
  font-size: 40rpx;
}
.box text.title {
  position:absolute;
  top: 20rpx;
  left: 50rpx;
  color: #333;
  font-weight: 600;
  font-size: 50rpx;
  padding-bottom: 16rpx;
}
