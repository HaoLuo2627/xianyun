<!--logs.wxml-->
<view class='baseInfo'>
  <text>基本信息</text>
</view>
<form bindsubmit="formSubmit">
<view class='list'>
  
  <view class='name'>
    <text>商品名称</text>
    <input name="name" type='text'></input>
  </view>
  <view class='category'>
    <text>类别</text>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      {{array[index]}}
    </view>
    </picker>
  </view>
  <view class='phone'>
    <text>价格</text>
    <input name="phone" type='text'></input>
  </view>
  <view class='info'>
    <text>商品描述</text>
    <input name="info" type='text'></input>
  </view>
</view>


<view class="question-images-area">
<!-- 添加图片按钮  -->
    <view class="question-images-tool">
      <button type="default" size="default" bindtap="chooseImage"wx:if="{{images.length < 3}}" >添加图片</button>
    </view>

    <!-- 图片缩略图  -->
    <view class="question-images">
      <block wx:for="{{images}}" wx:key="*this">
        <view class="q-image-wrap">
          <image class="q-image" src="{{item}}" mode="aspectFill" data-idx="{{index}}" bindtap="handleImagePreview"></image>
          <view class="q-image-remover" data-idx="{{index}}" bindtap="removeImage">删除</view>
        </view>
      </block>
    </view>
</view>


<button form-type='submit'>提交</button>
</form>
